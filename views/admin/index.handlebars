<div class="page-header">
<h1>Posts</h1>
  <p class="lead">{{error}}</p>
  {{#if posts}}
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Created date</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      {{#each posts}}
      <tr>
        <td>{{RowKey}}</td>
        <td>{{Title}}</td>
        <td>{{CreatedDate}}</td>
        <td>
          <a href="#" class="btn btn-primary btn-xs glyphicon glyphicon-edit" role="button">Edit</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <p>No posts :(</p>
  {{/if}}
</div>